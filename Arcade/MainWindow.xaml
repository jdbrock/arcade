<Window x:Class="Arcade.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arcade" Width="1280" Height="720" WindowStyle="None" WindowState="Maximized" Background="#16a085">
    <Grid>
        <Grid>
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="Resources/mario-bg.jpg" Opacity="0.1" />
            </Grid.Background>
        </Grid>

        <Viewbox>
            <Frame Name="ctFrame" Width="1280" Height="720" BorderThickness="0" Source="Pages/SplashPage.xaml" NavigationUIVisibility="Hidden" FocusVisualStyle="{x:Null}" />
        </Viewbox>
    </Grid>
</Window>
